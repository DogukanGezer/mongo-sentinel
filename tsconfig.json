{
    "compilerOptions": {
      "target": "ES2020", // or a later version
      "module": "CommonJS", // or "ESNext"
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}